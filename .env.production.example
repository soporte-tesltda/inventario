# =====================================================
# CONFIGURACIÓN DE PRODUCCIÓN - INVENTARIO TES LTDA
# =====================================================
# ⚠️ IMPORTANTE: Copia este archivo como .env en producción
# y actualiza los valores según tu servidor

APP_NAME=INVENTARIO_TESLTDA
APP_ENV=production
APP_KEY=base64:GENERAR_CON_PHP_ARTISAN_KEY_GENERATE
APP_DEBUG=false
APP_URL=https://tu-dominio.com
APP_TIMEZONE=America/Bogota
APP_LOCALE=es_CO
APP_FALLBACK_LOCALE=es

# =====================================================
# CONFIGURACIÓN DE LOGGING PARA PRODUCCIÓN
# =====================================================
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# =====================================================
# BASE DE DATOS
# =====================================================
# Configurar según tu servidor de producción
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=inventario_tesltda_prod
DB_USERNAME=tu_usuario_db
DB_PASSWORD=tu_password_seguro

# =====================================================
# CACHE Y SESIONES PARA PRODUCCIÓN
# =====================================================
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DRIVER=local
QUEUE_CONNECTION=database
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

